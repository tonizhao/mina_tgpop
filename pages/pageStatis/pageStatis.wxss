@import "../../asserts/wxss/comm.wxss"


.wrap {
    margin: 10px 10px;
}

page {
    display: block;
    min-height: 100%;
    background-color: #f1f1f1;
}

.page-heading {
    color : #df6c6e;
    padding-top: 10px;
    margin: 10px 0px 0px 10px;
}

.head-title {
    margin-left: 5px;
}

.icon-wrap {
    display: inline;
}

/*列表外层容器样式*/
.page-content {
    margin-top: 10px;
    padding: 10px 10px;
}

.page-list-info {
    color: #31708f;
    border-radius: 5px;
    margin-bottom: 10px;
}


/*列表框样式*/
.list-blue {
    border-left: 8px solid #5bb1dc;
    color: #31708f;
    background-color: #d9edf7;
    border-color: #bce8f1;
}

.list-red {
    border-left: 8px solid #df6c6e;
    color: #a94442;
    background-color: #f2dede;
    border-color: #ebccd1;
}

.list-green {
    border-left: 8px solid #a0d269;
    color: #3c763d;
    background-color: #dff0d8;
    border-color: #d6e9c6;
}

.list-dark-blue {
    border-left: 8px solid #23bab5;
    background-color: #8de9e6;
}

.list-yellow {
    border-left: 8px solid #eac841;
    color: #8a6d3b;
    background-color: #fcf8e3;
    border-color: #faebcc;
}

/*列表内文字样式*/
.page-list-info .text-title {
    padding-top: 8px;
    padding-left: 40px;
    font-size: 13px;
    font-weight: bold;
}

/*小字体*/
.page-list-info .font-small {
    font-size: 12px;
    font-style: italic;
    font-weight: normal;
}

/*左右两边的文字*/
.info-left {
    float: left;
}

.info-right {
    padding-left: 190px;
    padding-bottom: 10px;
    font-size: 8px;
}